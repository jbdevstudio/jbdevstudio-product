<shortcuts>
	<skipIfNotSupported />
	<defaultCurrentUser />
	<programGroup defaultName="Red Hat CodeReady Studio @major_version@" location="applications" />
	<shortcut
		name="Red Hat CodeReady Studio @version_string@@nightly_build_qualifier@"
		iconFile="$INSTALL_PATH\studio\devstudio.ico" 
		target="$INSTALL_PATH\studio\devstudio.exe"
		workingDirectory="$INSTALL_PATH\studio"
		description="Start Red Hat CodeReady Studio @version_string@@nightly_build_qualifier@"
		initialState="normal" programGroup="yes" desktop="yes" startMenu="no" />
	<shortcut
		name="Uninstall Red Hat CodeReady Studio @version_string@@nightly_build_qualifier@"
		iconFile="$INSTALL_PATH\studio\uninstall.ico" 
		target="$JAVA_HOME\bin\javaw.exe"
		workingDirectory=""
		commandLine="-jar &quot;$INSTALL_PATH\Uninstaller\uninstaller.jar&quot;"
		description="Uninstall Red Hat CodeReady Studio @version_string@@nightly_build_qualifier@"
		initialState="normal" programGroup="yes" desktop="no" startMenu="no" />
</shortcuts>
