<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>
   <extension
         id="product"
         point="org.eclipse.core.runtime.products">
      <product
            application="com.jboss.devstudio.core.application"
            name="JBoss Developer Studio">
         <property 
               name="appName" 
               value="JBoss Developer Studio"/> 
         <property
               name="startupProgressRect"
               value="29,232,397,15"/>
         <property
               name="startupMessageRect"
               value="29,215,417,20"/>
         <property
               name="startupForegroundColor"
               value="ffffff"/>
         <property
               name="preferenceCustomization"
               value="plugin_customization.ini"/>
         <property
         		name="startupVersionLocation"
         		value="228,194"/>
         <property
         		name="startupVersionFont"
         		value="Sans-bold-9"/>
         <property
               name="windowImages"
               value="ico_16_jbds.png,ico_32_jbds.png,48-jbds_icon.png,128_jbds_icon.png"/>
         <property
               name="aboutText"
               value="%aboutText"/>
         <property
               name="aboutImage"
               value="about_jbds.jpg"/>

         <property
				name="applicationXMI"
				value="org.eclipse.platform/LegacyIDE.e4xmi">
		  </property>
		  <property
				name="cssTheme"
				value="org.eclipse.e4.ui.css.theme.e4_default">
		  </property>
		  <property
				name="applicationCSSResources"
          value="platform:/plugin/org.eclipse.platform/images/">
		  </property>
         <!--property
				name="cssTheme"
				value="org.jboss.tools.central.themes.jbds">
		  </property-->
      </product>
   </extension>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run class="org.eclipse.ui.internal.ide.application.IDEApplication"/>
      </application>
   </extension>

    <extension
         point="org.eclipse.ui.splashHandlers">
      <splashHandler
            class="com.jboss.devstudio.core.splash.SplashHandler"
            id="com.jboss.devstudio.core.splash">
      </splashHandler>
      <splashHandlerProductBinding
            productId="com.jboss.devstudio.core.product"
            splashId="com.jboss.devstudio.core.splash">
      </splashHandlerProductBinding>
   </extension>
    <extension
          id="EclipseGenerator"
          point="org.eclipse.core.runtime.applications">
       <application>
          <run
                class="com.jboss.devstudio.core.MetaGeneratorApplication">
          </run>
       </application>
    </extension>
    <extension
        point="org.eclipse.ui.preferencePages">
        <page
            category="org.eclipse.ui.preferencePages.Workbench"
            name="%PreferencePages.Capabilities"
            id="com.jboss.devstudio.core.package.capabilities">
            <class
                class="org.eclipse.ui.activities.ActivityCategoryPreferencePage">
                <parameter
                    name="allowAdvanced"
                    value="true"/>
                <parameter
                    name="captionMessage"
                    value="%PreferencePages.Capabilities.captionMessage"/>
                <parameter
                    name="activityName"
                    value="%PreferencePages.Capabilities.activityName"/>
                <parameter
                    name="categoryName"
                    value="%PreferencePages.Capabilities.categoryName"/>
                <parameter
                    name="activityPromptButton"
                    value="%PreferencePages.Capabilities.activityPromptButton"/>
                <parameter
                    name="activityPromptButtonTooltip"
                    value="%PreferencePages.Capabilities.activityPromptButtonTooltip"/>
            </class>
        </page>
    </extension>

</plugin>
